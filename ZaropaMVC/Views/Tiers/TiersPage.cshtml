@model IEnumerable<ZaropaMVC.Entities.Tiers>

@{
    ViewBag.Title = "Subscription Tiers | Zaropa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center mt-5 mb-2 zaropa-text-color-white">Subscription Tiers</h1>
<h4 class="text-center mt-2 mb-3 zaropa-text-color-white">Select a tier that best suits you</h4>
<hr class="zaropa-color-egg"/>

<div class="container-fluid text-center " style="width:100%;height:1000px;">
   @foreach (var tiers in Model)
   {

    <div class="card card-cascade zaropa-gradiant-redblack d-inline-block mx-3 pb-3" style="width:25rem;">

 
        <div class="card-title mb-5 pb-1" style="background-color:rgba(36, 34, 34,0.5);">
            <h2 class="h2-responsive text-white">@tiers.Name</h2>
            <p>$@tiers.Price</p>
        </div>

        <div class="card-body  text-center mt-5 mb-5 pb-5">

            <p class="card-text zaropa-text-color-white">
               @tiers.Description
            </p>


        </div>
        <div class="align-self-end mt-5 pt-5">

            <a href="#" class="btn btn-cyan mt-auto mb-2">View Outfits</a>
        </div>
       
    </div>
     

   }

</div>